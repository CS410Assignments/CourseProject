{
    "manifest_version" : 2,
    "name": "BM25 Page Searcher",
    "short_name": "BM25",
    "description": "Find the relevent parts of a webpage with BM25",
    "version": "1.0.0",
    "icons": {"128": "BM25_128.png"},
    "content_scripts":[
        {
            "matches": [
                "http://github.com/*",
                "<all_urls>"
            ],
            "js": ["content.js", "data/stoplist.js", "pdf.js", "pdf.worker.js", "pdf.sandbox.js"]
        }
    ],
    "browser_action": {
        "default_icon": "BM25_19.png",
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.7.570/pdf.min.js; object-src 'self'",
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+S"
            }
        }
    },
    "permissions": ["tabs"]
}